syntax on

if !isdirectory(expand("~/.vimbackupdir"))
  call mkdir(expand("~/.vimbackupdir"), "p")
endif

set backupdir=~/.vimbackupdir,~/tmp,~/,.

" The 'directory' option controls where swap files go.
set directory=~/.vimbackupdir,~/tmp,~/,.

set autoindent
set expandtab
set shiftwidth=2
set softtabstop=2
set tabstop=2
