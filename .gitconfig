[url "git@github.com:m5rk/"]
	insteadOf = "git://github.com/m5rk/"

[branch]
	autosetuprebase = always

[include]
	path = ~/.config/git/local/git-credentials

[alias]
	ap = add --patch
	br = branch
	c = commit -m
	ci = commit
	co = checkout
	cop = checkout --patch
	d = diff
	dc = diff --cached
	fo = fetch --verbose --prune origin
	l = log
	put = push origin HEAD -u
	reauth = commit --amen --reset-author -CHEAD
	s = status
	st = status

[interactive]
	singlekey = true
[push]
	default = simple
[core]
	excludesfile = /Users/markmceahern/.gitignore_global
